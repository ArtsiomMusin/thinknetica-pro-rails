<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-message').html('<%= j message %>')
  <% end %>
<% else %>
  $('.answer-message').html('<%= j 'Your answer updated successfully.' %>')
  $('.answer-' + '<%= j @answer.id.to_s %>').replaceWith('<%= j render @answer %>');
<% end %>
